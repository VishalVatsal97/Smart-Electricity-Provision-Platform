@model SMP_WebApplication.UserAddress

@{
    ViewBag.Title = "Checkout";




}

<h2>Checkout</h2>

@if (ViewBag.Address == null)
{
    <div class="container">
        <div class="row">
            <div class="col-sm-2">

            </div>
            <div class="col-sm-8">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse1"> Add New Address</a>
                        </h4>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse">
                        <form>
                            <div class="panel-body">

                                <div class="form-group">
                                    <label for="exampleFormControlTextarea2">Enter Address:</label>
                                    <input type="text" class="form-control" name="HouseNo" placeholder="Enter House No" />
                                    <input type="text" class="form-control" name="Street" placeholder="Enter Street" />
                                    <input type="text" class="form-control" name="Area" placeholder="Enter Area" />
                                    <input type="text" class="form-control" name="State" placeholder="Enter State" />
                                    <input type="text" class="form-control" name="Pin" placeholder="Enter Pincode" />
                                </div>

                            </div>
                            <div class="panel-footer">

                                <button class="btn btn-danger" type="submit" name="SaveAdd" data-toggle="collapse" data-target="#collapse1">save</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
            <div class="col-sm-2">

            </div>

        </div>

    </div>

}
else
{
    <div class="container">
        <div class="row">
            <div class="col-sm-2">

            </div>
            <div class="col-sm-8">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse2"> Select Address</a>
                        </h4>
                    </div>
                    <div id="collapse2" class="panel-collapse collapse">
                        <form>
                            <div class="panel-body">



                                <div class="form-group">

                                    <label name="LebelAdd" for="exampleFormControlTextarea2">@ViewBag.Address.House</label><br />
                                    <label name="LebelAdd" for="exampleFormControlTextarea2">@ViewBag.Address.Street</label><br />
                                    <label name="LebelAdd" for="exampleFormControlTextarea2">@ViewBag.Address.Area</label><br />
                                    <label name="LebelAdd" for="exampleFormControlTextarea2">@ViewBag.Address.State</label><br />
                                    <label name="LebelAdd" for="exampleFormControlTextarea2">@ViewBag.Address.Pin</label><br />

                                </div>

                            </div>

                            <div class="panel-footer">

                                <button class="btn btn-danger" type="submit" name="PlaceOrder" data-toggle="collapse" data-target="#collapse2">Place Order</button>
                                <br /><p class="danger">@ViewBag.SelectError</p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-2">

            </div>

        </div>

    </div>

}
