@{
    SMPEntities context = new SMPEntities();
    HttpCookie c = Request.Cookies["Admin"];
    ViewBag.val = null;
    if (c != null)
    {
        ViewBag.val = "notnull"; //he is logged-in
    }
    else
    {
        ViewBag.user = "Sign In";
    }

    ViewBag.val2 = (ViewBag.val == null) ? "admin/Login" : "#";
    ViewBag.val3 = (c != null) ? "admin/Customers" : "#";
    ViewBag.val4 = (c != null) ? "admin/Coordinators" : "#";
    //ViewBag.val5 = (c != null) ? "UnAssignedCoordinators" : "#";
    ViewBag.val6 = (c != null) ? "admin/Suppliers" : "#";
    //  ViewBag.val7 = (c != null) ? "UnAssigned Supplier" : "#";
    ViewBag.val1 = (c != null) ? "Welcome" : "Login";
    ViewBag.UP = (c != null) ? "admin/UserProfile" : "Login";
    ViewBag.home = (c != null) ? "admin/welcome" : "home/index";



    //For getting qty number in cart

    string Username = "";
    if (c != null)
    {
        Username = c.Value;
    }

    var user = context.UserProfiles.FirstOrDefault(x => x.Email == Username);
    if (user != null)
    {
        ViewBag.user = user.FirstName;
    }
}

